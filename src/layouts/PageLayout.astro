---
import BaseLayout from "./BaseLayout.astro";

interface Props {
    title: string;
    description?: string;
    accent?:
        | "p1-violet"
        | "p2-rose"
        | "p3-emerald"
        | "p4-amber"
        | "p5-sky"
        | "neutral";
    breadcrumbs?: { label: string; href?: string }[];
}

const { title, description, accent, breadcrumbs } = Astro.props;
---

<BaseLayout
    title={`${title} | gwilym.ca`}
    description={description || title}
    accent={accent}
    breadcrumbs={breadcrumbs}
>
    <slot name="head" slot="head" />
    <main id="main-content" class="page" data-pagefind-body>
        <header class="page-header">
            <h1>{title}</h1>
        </header>
        <div class="prose">
            <slot />
        </div>
    </main>
</BaseLayout>

<style>
    .page {
        max-width: var(--width-content);
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 2rem;
    }

    .page-header h1 {
        font-size: var(--text-4xl);
        line-height: 1.2;
        letter-spacing: -0.01em;
    }
</style>
