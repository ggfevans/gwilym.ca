---
import ThemeToggle from './ThemeToggle.svelte';
import MobileNav from './MobileNav.svelte';
import Search from './Search.svelte';

interface Props {
  breadcrumbs?: { label: string; href?: string }[];
}

const { breadcrumbs } = Astro.props;

const navItems = [
  { href: '/about', label: 'About' },
  { href: '/work', label: 'Work' },
  { href: '/write', label: 'Write' },
  { href: '/now', label: 'Now' },
];

const currentPath = Astro.url.pathname;
---

<header class="gw-navbar">
  <!-- Desktop Navigation -->
  <nav class="gw-navbar__nav" aria-label="Main navigation">
    <div class="gw-navbar__start">
      <a href="/" class="gw-navbar__logo" aria-label="GVNS home">GVNS</a>
    </div>

    <div class="gw-navbar__center">
      {breadcrumbs ? (
        <ol class="gw-breadcrumbs" aria-label="Breadcrumb">
            {breadcrumbs.map((item, i) => (
              <li class="gw-breadcrumbs__item">
                {i > 0 && <span class="gw-breadcrumbs__separator" aria-hidden="true">/</span>}
                {item.href ? (
                  <a href={item.href} class="gw-breadcrumbs__link">{item.label}</a>
                ) : (
                  <span class="gw-breadcrumbs__current" aria-current="page">{item.label}</span>
                )}
              </li>
            ))}
          </ol>
      ) : (
        <ul class="gw-navbar__links">
          {navItems.map(({ href, label }) => {
            const isActive = currentPath === href || (href !== '/' && currentPath.startsWith(href));
            return (
              <li>
                <a
                  href={href}
                  class:list={['gw-navbar__link', { 'gw-navbar__link--active': isActive }]}
                  aria-current={isActive ? 'page' : undefined}
                >
                  {label}
                </a>
              </li>
            );
          })}
        </ul>
      )}
    </div>

    <div class="gw-navbar__end">
      <ThemeToggle client:load />
      <Search client:load />
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <div class="gw-navbar__mobile">
    <a href="/" class="gw-navbar__logo" aria-label="GVNS home">GVNS</a>
    <div class="gw-navbar__mobile-actions">
      <Search client:load />
      <MobileNav client:load navItems={navItems} currentPath={currentPath} />
    </div>
  </div>
</header>

<style>
  .gw-navbar {
    position: relative;
    padding: var(--space-4) var(--space-6);
    border-bottom: 1px solid var(--colour-border);
  }

  /* Desktop nav */
  .gw-navbar__nav {
    max-width: var(--width-content);
    margin: 0 auto;
    display: none;
    align-items: center;
    justify-content: space-between;
  }

  @media (min-width: 768px) {
    .gw-navbar__nav {
      display: flex;
    }
  }

  /* Start: Logo */
  .gw-navbar__logo {
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--colour-text-primary);
    text-decoration: none;
    flex-shrink: 0;
  }

  /* Center: Nav links or breadcrumbs */
  .gw-navbar__center {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    min-width: 0;
  }

  .gw-navbar__links {
    display: flex;
    gap: var(--space-6);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .gw-navbar__link {
    color: var(--colour-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .gw-navbar__link:hover,
  .gw-navbar__link--active {
    color: var(--colour-accent-primary);
  }

  /* Breadcrumbs */
  .gw-breadcrumbs {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: var(--text-sm);
  }

  .gw-breadcrumbs__item {
    display: flex;
    align-items: center;
  }

  .gw-breadcrumbs__separator {
    margin: 0 var(--space-2);
    color: var(--colour-text-muted);
  }

  .gw-breadcrumbs__link {
    color: var(--colour-text-secondary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .gw-breadcrumbs__link:hover {
    color: var(--colour-accent-primary);
  }

  .gw-breadcrumbs__current {
    color: var(--colour-text-primary);
    max-width: 20ch;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* End: Theme toggle + Search */
  .gw-navbar__end {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    flex-shrink: 0;
  }

  /* Mobile Navigation */
  .gw-navbar__mobile {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--width-content);
    margin: 0 auto;
  }

  .gw-navbar__mobile-actions {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  @media (min-width: 768px) {
    .gw-navbar__mobile {
      display: none;
    }
  }
</style>
