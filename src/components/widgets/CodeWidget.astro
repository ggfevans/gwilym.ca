---
import { relativeTime, truncate } from '@utils/format';
import { parseGitHubData, activityLabel, formatStreak, EMPTY_GITHUB_DATA } from '@utils/github';
import type { GitHubData } from '@utils/github';

interface Props { compact?: boolean; }
const { compact = false } = Astro.props;

let data: GitHubData;
try {
  const imported = (await import('../../data/github.json')).default;
  data = parseGitHubData(imported);
} catch (e) {
  if (import.meta.env.DEV) console.error('Failed to load GitHub data for CodeWidget:', e);
  data = EMPTY_GITHUB_DATA;
}

const latestActivity = data.recentActivity[0] ?? null;
const streak = data.streak;
---

{compact ? (
  <article class="gw-widget-compact gw-widget-compact--code">
    <div class="gw-widget-compact__label">Now Coding</div>
    {latestActivity ? (
      <a href="/code" class="gw-widget-compact__body">
        <div class="gw-widget-compact__info">
          <p class="gw-widget-compact__title gw-widget-compact__title--mono">{latestActivity.repo}</p>
          <p class="gw-widget-compact__subtitle">{truncate(latestActivity.title, 60)}</p>
        </div>
      </a>
    ) : (
      <p class="gw-widget-compact__empty">No recent activity.</p>
    )}
  </article>
) : (
  <article class="gw-widget gw-widget--code">
    <div class="gw-widget__label">Code</div>
    {latestActivity ? (
      <div class="gw-widget__content">
        <p class="gw-widget__repo">{latestActivity.repo}</p>
        <p class="gw-widget__detail">{truncate(latestActivity.title, 72)}</p>
        <div class="gw-widget__meta">
          <span class="gw-widget__activity-type">{activityLabel(latestActivity.type)}</span>
          <time class="gw-widget__time" datetime={latestActivity.date}>
            {relativeTime(latestActivity.date)}
          </time>
        </div>
        {streak.current > 0 && (
          <p class="gw-widget__streak">{formatStreak(streak.current)} streak</p>
        )}
      </div>
    ) : (
      <p class="gw-widget__empty">No recent activity.</p>
    )}
    <a href="/code" class="gw-widget__link">
      View Full Activity <span aria-hidden="true">&rarr;</span>
    </a>
  </article>
)}

<style>
  .gw-widget--code {
    border-left-color: var(--colour-p1-violet);
  }

  .gw-widget--code .gw-widget__link:hover {
    color: var(--colour-p1-violet);
  }

  .gw-widget__repo {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--colour-p1-violet);
    margin: 0 0 var(--space-1) 0;
  }

  .gw-widget__meta {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .gw-widget__activity-type {
    font-size: var(--text-xs);
    color: var(--colour-text-muted);
  }

  .gw-widget__streak {
    font-size: var(--text-xs);
    color: var(--colour-p1-violet);
    margin: var(--space-1) 0 0 0;
  }

  .gw-widget-compact--code {
    border-top: var(--border-accent) solid var(--colour-p1-violet);
  }

  .gw-widget-compact__title--mono {
    font-family: var(--font-mono);
  }
</style>
