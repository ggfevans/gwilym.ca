---
const status = 'Open to freelance work';
const isActive = true;
---

<article class="gw-widget gw-widget--status">
  <div class="gw-widget__label">Status</div>
  <div class="gw-widget__content">
    <div class="gw-status__row">
      {isActive && <span class="gw-status__pulse" aria-hidden="true" />}
      <p class="gw-widget__detail gw-widget__detail--bold">{status}</p>
    </div>
  </div>
</article>

<style>
  .gw-widget--status {
    border-left-color: var(--colour-p5-sky);
  }

  .gw-status__row {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .gw-status__pulse {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--colour-p5-sky);
    flex-shrink: 0;
    animation: gw-pulse 2s ease-in-out infinite;
  }

  @keyframes gw-pulse {
    0%, 100% { opacity: 1; box-shadow: 0 0 0 0 color-mix(in srgb, var(--colour-p5-sky) 40%, transparent); }
    50% { opacity: 0.7; box-shadow: 0 0 0 6px transparent; }
  }
</style>
