---
import type { CollectionEntry } from 'astro:content';
import { formatDate } from '@utils/date';
import { getReadingTime } from '@utils/reading-time';
import TagList from './TagList.astro';

interface Props {
  post: CollectionEntry<'writing'>;
  showReadingTime?: boolean;
}

const { post, showReadingTime = true } = Astro.props;
const { title, description, pubDate, tags } = post.data;
const readingTime = getReadingTime(post.body);

// Extract just the filename from the full slug path
// e.g., "2024/12/hello-world" -> "hello-world"
const slugParts = post.slug.split('/');
const filename = slugParts[slugParts.length - 1];
---

<article class="post-card">
  <h3 class="post-title">
    <a href={`/write/${filename}`}>{title}</a>
  </h3>
  <div class="post-meta">
    <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
    {showReadingTime && <span class="reading-time">{readingTime} min read</span>}
  </div>
  <p class="post-description">{description}</p>
  <TagList tags={tags} />
</article>

<style>
  .post-card {
    background: var(--colour-bg-secondary);
    border-radius: 8px;
    padding: 1.5rem;
    border: 1px solid var(--colour-border);
    transition: border-color var(--transition-fast);
  }

  .post-card:hover {
    border-color: var(--colour-accent-primary);
  }

  .post-title {
    margin: 0 0 0.5rem;
    font-size: var(--text-xl);
    font-weight: 600;
    line-height: 1.4;
  }

  .post-title a {
    color: var(--colour-text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .post-title a:hover {
    color: var(--colour-accent-primary);
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    font-size: var(--text-sm);
    color: var(--colour-text-secondary);
    margin-bottom: 0.75rem;
  }

  .reading-time::before {
    content: "Â·";
    margin-right: 1rem;
  }

  .post-description {
    margin: 0 0 1rem;
    color: var(--colour-text-secondary);
    line-height: 1.6;
  }
</style>
